@model List<Patient>

<h2>Manage Patients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Email</td>
                <td>@patient.PhoneNumber</td>
                <td>
                    <a asp-action="Profile" asp-controller="Patient" asp-route-id="@patient.PatientId" class="btn btn-info">View Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>