@model Patient

<h2>Patient Profile</h2>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
    <p><strong>Medical History:</strong> @Model.MedicalHistory</p>
    <p><strong>Document:</strong> <a href="@Model.DocumentPath" target="_blank">View Document</a></p>
</div>